{
	"info": {
		"name": "PosBuzz",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@pos.com\",\n    \"password\": \"123456\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{base_url}}/auth/login"
					}
				}
			]
		},
		{
			"name": "Products",
			"item": [
				{
					"name": "Get All Products",
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{base_url}}/products"
					}
				},
				{
					"name": "Create Product",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Example Item\",\n    \"sku\": \"EX-123\",\n    \"price\": 100,\n    \"stock_quantity\": 50\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{base_url}}/products"
					}
				}
			]
		},
		{
			"name": "Sales",
			"item": [
				{
					"name": "Process Sale",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"productId\": \"replace-with-id\",\n    \"quantity\": 5\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{base_url}}/sales"
					}
				}
			]
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{access_token}}",
				"type": "string"
			}
		]
	}
}